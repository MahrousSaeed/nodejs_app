</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <h2><% if(editing){  %> Update product <% }else{  %>Add New Product <% }  %></h2>
        <form action="<% if(editing){  %>/edit-product <% }else{  %>/product <% }  %>" method="POST">
            <div class="form-control">
                <label> <strong>Title</strong> </label>
                <input type="text" name="title" value="<% if(editing){  %><%= product.title %><% }%> " placeholder="type product name">
            </div>
            <div class="form-control">
                <label> <strong>Image Url</strong> </label>
                <input type="text" name="imageUrl" value="<% if(editing){  %><%= product.imageUrl %><% }%> " placeholder="type product name">
            </div>
            <div class="form-control">
                <label> <strong>Description</strong> </label>
                <input type="text" name="description" value="<% if(editing){  %><%= product.description %><% }%> " placeholder="type description">
            </div>
            <div class="form-control">
                <label> <strong>price</strong> </label>
                <input type="text" name="price" value="<% if(editing){  %><%= product.price %><% }%> " placeholder="type product price">
            </div>
            <% if(editing){  %>
                <input type="hidden" name="productId" value="<%= product.id  %>" >
            <% }  %>
            <button type="submit"> <% if(editing){  %> Update product <% }else{  %>add product <% }  %> </button>
        </form>
    </main>

    <%- include('../includes/end.ejs') %>